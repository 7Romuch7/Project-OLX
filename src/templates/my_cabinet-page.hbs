<div>{{>./my_office.hbs}}</div>
<div class="container_cabinet">
    <div class="container_ads">
        <button class="prev" id="prev">
            <svg width="18" height="18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M11.557 5.558L10.5 4.5 6 9l4.5 4.5 1.057-1.057L8.123 9l3.434-3.442z" fill="#000" />
            </svg>
        </button>
        <h3 class="title_ads">Мої оголошення</h3>
        <button class="next" id="next">
            <svg width="18" height="18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6.442 5.558L7.5 4.5 12 9l-4.5 4.5-1.058-1.057L9.877 9 6.442 5.558z" fill="#000" />
            </svg>
        </button>
    </div>
    <div class="slider-js">

        <ul class="ads_list">

            {{#each calls}}
            <li class="ads_list-item" data-category="{{category}}" data-description="{{description}}"
                data-phone="{{phone}}" data-userID="{{userId}}" data-id="{{_id}}" data-title="{{title}}"
                data-images="{{imageUrls}}" data-price="{{price}}">
                <div class="ads_img-container">
                    {{#each imageUrls}}<img src="{{this}}" alt="">{{/each}}
                </div>
                <div class="ads_text-container">
                    <p>{{title}}</p>
                    <p>{{price}} грн</p>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>

    <div class="container_favorites">
        <button class="prev" id="prev">
            <svg width="18" height="18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M11.557 5.558L10.5 4.5 6 9l4.5 4.5 1.057-1.057L8.123 9l3.434-3.442z" fill="#000" />
            </svg>
        </button>
        <h3 class="title_favorites">Обране</h3>
        <button class="next" id="next">
            <svg width="18" height="18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6.442 5.558L7.5 4.5 12 9l-4.5 4.5-1.058-1.057L9.877 9 6.442 5.558z" fill="#000" />
            </svg>
        </button>
    </div>

    <div class="slider-js">
        <ul class="favorites_list">
            {{#each favourites}}
            <li class="favorites_list-item" data-category="{{category}}" data-description="{{description}}"
                data-phone="{{phone}}" data-userID="{{userId}}" data-id="{{_id}}" data-title="{{title}}"
                data-images="{{imageUrls}}" data-price="{{price}}">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M8 15.36L6.88 14.24C2.72 10.56 0 8.08002 0 5.04001C0 2.56001 1.92 0.640015 4.4 0.640015C5.76 0.640015 7.12 1.28001 8 2.32001C8.88 1.28001 10.24 0.640015 11.6 0.640015C14.08 0.640015 16 2.56001 16 5.04001C16 8.08002 13.28 10.56 9.12 14.24L8 15.36Z"
                        fill="#FF6B09" />
                </svg>
                <div class="favorites_img-container">{{#each imageUrls}}<img src="{{this}}" alt="">{{/each}}

                </div>
                <div class="favorites_text-container">
                    <p>{{title}}</p>
                    <p>{{price}}</p>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>